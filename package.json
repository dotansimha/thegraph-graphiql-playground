{
  "name": "@graphprotocol/graphiql",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/** --ext .ts --ext .tsx",
    "lint:fix": "eslint src/** --ext .ts --ext .tsx --fix",
    "format": "prettier --write",
    "ci": "pnpm typecheck && pnpm lint"
  },
  "dependencies": {
    "@graphiql/plugin-explorer": "^0.1.0",
    "@graphiql/react": "^0.11.1",
    "@graphiql/toolkit": "^0.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@edgeandnode/components": "^23.0.7",
    "@edgeandnode/eslint-config": "^1.0.3",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.0.1",
    "eslint": "^8.22.0",
    "eslint-plugin-testing-library": "^5.6.0",
    "postcss-nesting": "^10.1.10",
    "prettier": "^2.7.1",
    "theme-ui": "^0.14.7",
    "typescript": "^4.6.4",
    "vite": "^3.0.7"
  },
  "peerDependencies": {
    "@edgeandnode/components": "^23.0.7",
    "theme-ui": "^0.14.7"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "graphql"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
